<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plantkriya"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.ReviewerUserKriyaActivity"></activity>
        <activity android:name=".activity.submissionkriya.DetailSubmissionKriyaActivity" />
        <activity android:name=".activity.DetailSubmissionReviewerKriyaActivity" />
        <activity android:name=".activity.submissionkriya.UploadSubmissionKriyaActivity" />
        <activity
            android:name=".activity.plantproduct.DetailMaterialKriyaActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.plantproduct.EditMaterialKriyaActivity" />
        <activity android:name=".activity.plantproduct.AddProductKriyaActivity" />
        <activity android:name=".activity.submissionkriya.SubmissionKriyaActivity" />
        <activity
            android:name=".activity.CreateNoteActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.DetailSubmissionReviewerActivity" />
        <activity android:name=".activity.ReviewerUserActivity" />
        <activity android:name=".activity.submissionplant.DetailSubmissionActivity" />
        <activity android:name=".activity.submissionplant.SubmissionActivity" />
        <activity android:name=".activity.submissionplant.UploadSubmissionActivity" />
        <activity
            android:name=".activity.plantproduct.DetailMaterialPlantActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.plantproduct.EditMaterialActivity" />
        <activity android:name=".activity.plantproduct.AddProductActivity" />
        <activity android:name=".account.ProfileEditReviewerActivity" />
        <activity android:name=".account.MainReviewerActivity" />
        <activity
            android:name=".account.MainUserActivity"
            android:windowSoftInputMode="stateHidden" />
<!--        <activity android:name=".screen.IntroActivity" />-->
        <activity android:name=".account.RegisterActivity" />
        <activity android:name=".account.LoginActivity" />
        <activity android:name=".account.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>