<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_submissionId"
            android:text="SubmissionId : 1129019"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/date_tv"
            android:layout_toStartOf="@id/next_Iv"
            android:text="22/08/2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title_tv"
            android:layout_below="@id/date_tv"
            android:text="Tanam Cabai"
            android:fontFamily="@font/poppins_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_below="@id/title_tv"
            android:textSize="12sp"
            android:text="Email : teguuhmr13@gmail.com"
            android:fontFamily="@font/poppins_extralight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_category_plant"
            android:layout_below="@id/tv_email"
            android:textSize="12sp"
            android:layout_marginStart="1dp"
            android:fontFamily="@font/poppins_extralight"
            android:text="Kategori : Sayuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/status_tv"
            android:layout_below="@id/tv_email"
            android:layout_toStartOf="@id/next_Iv"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_extralight"
            android:text="Diproses"
            android:textColor="@color/blue_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/next_Iv"
            android:src="@drawable/ic_next"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>